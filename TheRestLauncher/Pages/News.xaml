<Page x:Class="TheRestLauncher.Pages.News"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TheRestLauncher.Pages"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="News" Background="#363840">

    <Grid>
        <TabControl>
            <TabControl.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="Resources/Styles/TabControl.xaml"/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </TabControl.Resources>
            <TabItem Header="Новости лаунчера">
                <StackPanel>
                    <DockPanel>
                        <Border >
                            <TextBlock Margin="10">
                                <Run Text="Обновление ОБТ после ЗБТ ((число))" FontSize="20"/>
                                <LineBreak/>
                                <Run Text="1. Полностью обновлён апдейтер"/>
                                <LineBreak/>
                                <Run Text="2. Добавлена система нахождения ошибок и самовосстановление их"/>
                                <LineBreak/>
                                <Run Text="3. Добавлена кнопка, которая сбросит все моды по умолчанию"/>
                                <LineBreak/>
                                <Run Text="4. Добавлены кнопки интеграции"/>
                                <LineBreak/>
                                <Run Text="5. Добавлена пасхалка"/>
                                <LineBreak/>
                                <Run Text="6. Добавлена смена ника"/>
                                <LineBreak/>
                                <Run Text="7. Исправлен запуск майнкрафт(Теперь не вылезает окно с командной строкой)"/>
                                <LineBreak/>
                                <Run Text="8. Добавлена анимация запуска лаунчера"/>
                            </TextBlock>
                        </Border>
                    </DockPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Новости сервера">
                <StackPanel>
                    <DockPanel>
                        <Border>
                            <TextBlock Margin="10">
                                <Run Text="Открытие энда совсем рядом" FontWeight="Bold" FontStyle="Italic" FontSize="20"/>
                                <LineBreak/>
                                <Run Text="Здравствуйте, уважаемые игроки TheRest! Спешим сообщить, что открытие энда сосоится через час!" FontWeight="Normal"/>
                                <LineBreak/>
                                <LineBreak/>
                                <LineBreak/>
                                <LineBreak/>
                                <Run Text="Новость от: izumrudik01"/>
                                <LineBreak/>
                                <Run Text="Дата: 30.04.2023"/>
                            </TextBlock>
                        </Border>
                    </DockPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Новости игроков">
                <StackPanel>
                    <DockPanel>
                        <Border Height="530">

                        </Border>
                    </DockPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
