<Page x:Class="TheRestLauncher.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheRestLauncher.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Settings" Background="#363840">
    <Page.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#222227"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6161FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/Font/argentium/Regular.ttf"/>
        </Style>
    </Page.Resources>

    <Grid>
        <TabControl Margin="-2,-46,-2,-2" Grid.RowSpan="2">
            <TabControl.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="Resources/Styles/TabControl.xaml"/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </TabControl.Resources>

            <TabItem Header="Лаунчер">
                
            </TabItem>
            <TabItem Header="Клиент">
                
            </TabItem>
            <TabItem Header="Информация">

            </TabItem>
            <TabItem Header="Поддержка">
                <Grid>
                    <StackPanel Margin="10">
                        <Border Name="q1" Height="100" Margin="0,0,0,5" MouseLeftButtonDown="q1_MouseLeftButtonDown">
                            <StackPanel>
                                <TextBlock Text="Как начать играть?" FontSize="28" x:Name="TQ1"/>
                                 <TextBlock Text="Чтобы начать играть, вам необходимо предварительно установить Minecraft, и настроить его запуск." FontSize="20"/>
                            </StackPanel>
                        </Border>
                        <Border Name="q2" Height="100" Margin="0,0,0,5">
                            
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
