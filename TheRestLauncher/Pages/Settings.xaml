<Page x:Class="TheRestLauncher.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheRestLauncher.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Settings" Background="#363840">
    <Page.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#363840"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6161FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>
        <ProgressBar  Height="40" VerticalAlignment="Top" Margin="15,16,15,0"
                     Background="#222227" Foreground="#2F71AD" Name="progressBar" BorderThickness="0"
                      Minimum="0" Maximum="100" Grid.Row="1"/>
        <TabControl Margin="-2,-46,-2,-2" Grid.RowSpan="2">
            <TabControl.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="Resources/Styles/TabControl.xaml"/>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </TabControl.Resources>
            <TabItem Header="Аккаунт">
            </TabItem>
            <TabItem Header="Лаунчер">
                <Border Background="#222227" Margin="20, 30, 20, 90" CornerRadius="30">
                    <Grid>
                        <Button Width="230"
                            VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30"
                            Content=""
                            Name="AllowUpdate" Click="AllowUpdate_Click">
                            <!--Content здесь пустой, потому что нужно же как то выводить сам контент-->
                        </Button>
                    </Grid>
                </Border>
            </TabItem>
            <TabItem Header="Клиент">
            </TabItem>
            <TabItem Header="Информация">
            </TabItem>
            <TabItem Header="Ссылки">
            </TabItem>
        </TabControl>

    </Grid>
</Page>
