<Page x:Class="TheRestLauncher.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheRestLauncher.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings" Background="#363840">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="1">
            <TextBlock Text="Действия с лаунчером" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="15"/>
            <Button x:Name="Update" Content="Обновить лаунчер" Grid.ColumnSpan ="1" Height="50" VerticalAlignment="Top" Margin="10,10" Click="Update_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Text="Действия с клиентом Манйкрафт" FontSize="15" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button x:Name="Change" Content="Сменить ник" Height="50" VerticalAlignment="Top" Margin="10,10" Click="Change_Click"/>
            <Button x:Name ="Reload" Content="Переустановить клиент" Height="50" Margin="10,10" Click="Reload_Click"/>
            <Button x:Name="UpdateM" Content="Обновить клиент" Height="50" Margin="10,10" Click="Button_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <TextBlock Text="Прочее" FontSize="15" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            <Button x:Name="GoM" Content="Перейти в папку с майнкрафтом" Height="50" Margin="10,10" Click="GoM_Click"/>
        </StackPanel>
    </Grid>
</Page>
