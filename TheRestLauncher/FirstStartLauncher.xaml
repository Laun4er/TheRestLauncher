<Window x:Class="TheRestLauncher.FirstStartLauncher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheRestLauncher"
        mc:Ignorable="d"
        Title="FirstStartLauncher" Height="450" Width="800"
        Background="#363840"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Обновление лаунчера за [дата]" FontSize="24" Style="{StaticResource Bold}" HorizontalAlignment="Center"/>
            <TextBlock FontSize="18" Name="Content" Style="{StaticResource Light}"/>
            <Button Width="160" Height="30" HorizontalAlignment="Right" Content="Продолжить" Name="Next" Click="Next_Click"/>
        </StackPanel>

    </Grid>
</Window>
